# FastAPI Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# ChromaDB Configuration
CHROMADB_PATH=./data/embeddings
CHROMADB_ANONYMIZED_TELEMETRY=false

# Embedding Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32
EMBEDDING_DEVICE=cpu

# RAG Configuration
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.5

# API Configuration
API_TITLE=Physical AI RAG Chatbot
API_VERSION=1.0.0
API_DESCRIPTION=RAG-powered chatbot for Physical AI textbook

# CORS Configuration (for local development)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000

# Optional: External APIs (if used in future)
# OPENAI_API_KEY=sk-...
# NEON_DATABASE_URL=postgresql://...

# Validation Configuration
RAG_ACCURACY_THRESHOLD=0.90
VALIDATION_QUERIES_MIN=3
