# RAG Chatbot Configuration (Copy to .env and fill with actual values)
# NEVER commit .env to version control

# Cohere API Configuration
COHERE_API_KEY=your_cohere_api_key_here

# Qdrant Vector Database Configuration
QDRANT_URL=https://your-qdrant-cluster-id.region.cloud.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here

# Neon PostgreSQL Configuration (optional, for session/chat history)
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# FastAPI Configuration
ENVIRONMENT=development  # or production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
DEBUG=False

# Chatbot Configuration
CHUNKING_STRATEGY=semantic  # Token-based semantic chunking
CHUNK_SIZE=300  # Minimum tokens per chunk
CHUNK_MAX_SIZE=500  # Maximum tokens per chunk
CHUNK_OVERLAP=50  # Token overlap between chunks

# API Configuration
API_TIMEOUT=30  # Seconds
QUERY_TIMEOUT=5  # Query timeout in seconds
MAX_QUERY_LENGTH=500  # Maximum query characters

# Security
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=True
HTTPS_ONLY=True  # Enforce HTTPS in production

# Book Indexing
MAX_BOOK_PAGES=500
SUPPORTED_FORMATS=pdf,txt,md
INDEX_BATCH_SIZE=10  # Chunk batches for indexing

# Logging & Monitoring
QUERY_LOGGING_ENABLED=True
LOG_DIR=./logs
ACCURACY_METRICS_FILE=./metrics/accuracy.json

# Optional: Select-Text Feature
SELECT_TEXT_MIN_CHARS=10  # Minimum characters for valid selection
SELECT_TEXT_CONSTRAINT=True  # Enforce retrieval constraint for selected text
